.page-header
  = link_to fleets_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_fleet_path(@fleet), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show fleet

%dl.dl-horizontal
  %dt Instance type:
  %dd= @fleet.instance_type
  %dt Instance count:
  %dd= @fleet.instance_count
