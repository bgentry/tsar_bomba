.page-header
  = link_to fleets_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to @fleet, :class => 'btn btn-danger', :data => { confirm: 'Are you sure?' }, :method => :delete do
    %span.glyphicon.glyphicon-trash
    Destroy
  %h1 Show fleet

%dl.dl-horizontal
  %dt Provider region:
  %dd= @fleet.provider_region
  %dt Instance type:
  %dd= @fleet.instance_type
  %dt Instance count:
  %dd= @fleet.instance_count

%h2 Instances
.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th ID
        %th Provider ID
        %th State

    %tbody
      - @fleet.instances.each do |instance|
        %tr
          %td= link_to instance.to_param, [@fleet, instance]
          %td= instance.provider_id
          %td= instance.state
